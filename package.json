{
    "name": "debate-timer",
    "version": "0.2.0",
    "productName": "Debate Timer",
    "private": true,
    "author": "Arvind Balaji <arvindb02@gmail.com>",
    "main": "public/electron.js",
    "CSC_NAME": "com.arvinbalaji",
    "homepage": "./",
    "dependencies": {
        "electron-is-dev": "^0.1.2"
    },
    "devDependencies": {
        "antd": "^2.12.6",
        "concurrently": "^3.4.0",
        "electron": "^1.6.11",
        "electron-builder": "^19.22.1",
        "react": "^15.5.4",
        "react-dom": "^15.6.0",
        "react-event-components": "^1.0.0",
        "react-router-dom": "^4.1.2",
        "react-scripts": "1.0.7",
        "wait-on": "^2.0.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
        "electron-pack": "build -mw --em.main=build/electron.js",
        "preelectron-pack": "yarn build"
    },
    "build": {
        "appId": "com.arvindbalaji.debatetimer",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "artifactName": "debatetimer-${version}-win.${ext}",
            "target": "portable"
        },
        "mac": {
            "artifactName": "debatetimer-${version}-mac.${ext}",
            "target": "dmg"
        }
    }
}
